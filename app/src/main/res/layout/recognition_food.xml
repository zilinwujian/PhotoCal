<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <include layout="@layout/head" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        >

        <TextView
            android:id="@+id/recognition_kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="132 KCal"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            />

        <ImageView
            android:id="@+id/recognition_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            />

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:padding="10dp"
        >

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <ImageButton
                android:id="@+id/recognition_name_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/recognition_more_info"
                android:background="#00000000"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/recognition_name_text"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/recognition_name_button"
                android:gravity="right|center"
                android:text="Chicken Rice"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="dish name"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="18sp"

                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true"/>



        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/recognition_ingredient_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/recognition_more_info"
                android:background="#00000000"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/recognition_ingredient_text"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/recognition_ingredient_button"
                android:gravity="right|center"
                android:text="Chicken,rice,chicken,rice"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ingredient"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="18sp"

                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>



        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/recognition_time_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/recognition_more_info"
                android:background="#00000000"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/recognition_time_text"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/recognition_time_button"
                android:gravity="right|center"
                android:text="20170418 18:00"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="eat time"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="18sp"

                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>



        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/recognition_percent_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/recognition_more_info"
                android:background="#00000000"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/recognition_percent_text"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/recognition_percent_button"
                android:gravity="right|center"
                android:text="100"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="eat percent"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="18sp"

                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageButton
                android:id="@+id/recognition_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/recognition_confirm"
                android:background="#00000000"
                android:scaleType="center"
                android:layout_gravity="center"
                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>