<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#2dffffff"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/each_suggestion_dish_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1、"
                android:textSize="18sp"
                android:paddingTop="5dp"
                android:textColor="#ffffff"
                />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"

            >

            <TextView
                android:id="@+id/each_suggestion_dish_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textSize="18sp"
                android:text="dish name 1"
                android:textColor="#ffffff"
                />

            <TextView
                android:id="@+id/each_suggestion_dish_ingredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/each_suggestion_dish_name"
                android:text="populer spicy noodle"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>