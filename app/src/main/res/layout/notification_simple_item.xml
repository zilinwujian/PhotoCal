<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/notification_simple_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/notification_simple_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/notification_simple_image"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            >
            
            <TextView
                android:id="@+id/notification_simple_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Your First Week Report"
                android:textSize="16sp"
                android:gravity="bottom"
                android:paddingBottom="3dp"
                android:textColor="#ffffff"
                />

            <TextView
                android:id="@+id/notification_simple_state"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Already read"
                android:textSize="14sp"
                android:gravity="start"
                android:textColor="#ffffff"
                />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            
            <ImageView
                android:id="@+id/notification_more_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:src="@drawable/user_home_option_info"
                android:layout_gravity="center"
                android:scaleType="center"
                />
            
        </LinearLayout>


    </LinearLayout>


</LinearLayout>